{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="banner"></div>
    <section class="container">
        <h2>Se connecter</h2> 
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {{dump(error)}}
        {% endif %}
    </section>
    <section class="container containerContactForm containerLoginForm">
        <form class="formDefault formLogin" action="{{ path('app_login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="formDefault ">
                <input required type="text" id="username" name="_username" value="{{ last_username }}">
                <label for="username">Nom d'utilisateur</label>
            </div>
            <div class="formDefault">
                <input required type="password" id="password" name="_password">
                <label for="password">Password:</label>
            </div>
            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value="/">

            <button class="submitButton" type="submit">Se connecter</button>
        </form>
    </section>
{% endblock %}
